<% if book.favorited_by?(current_user) %>
    <%= link_to "♥#{book.favorites.count}", book_favorites_path(book), method: :delete ,class: "favorite-btn", remote: true %>
<% else %>
    <%= link_to "♥#{book.favorites.count}", book_favorites_path(book), method: :post, class: "unfavorite-btn", remote: true %>
<% end %>